@model IEnumerable<LanchoneteCore.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h2>Produto</h2>

<p>
    <a asp-action="Create">Adicionar novo Produto.</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorUnitario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @if (item.Disponibilidade.Equals(true)) {
                    <p>Disponível</p>
                }
                else {
                    <p>Indisponível</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorUnitario)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.ProdutoID">Edit</a> |
                <a asp-action="Detalhes" asp-route-id="@item.ProdutoID">Details</a> |
                <a asp-action="Excluir" asp-route-id="@item.ProdutoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
