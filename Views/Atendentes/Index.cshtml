@model IEnumerable<LanchoneteCore.Models.Atendente>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Atendentes</h2>

<p>
    <a asp-action="Create">Adicionar um(a) novo(a) atendente.</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AtendenteID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.AtendenteID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.AtendenteID">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
