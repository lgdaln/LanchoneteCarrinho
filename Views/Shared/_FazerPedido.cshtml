@model LanchoneteCore.Models.Produto

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3 class="pull">@Model.Nome</h3>

                <div class="text-center view overlay hm-white-slight">
                    <img src="@Model.ImagemUrl" alt="ASP.NET" class="img-responsive" />
                    <a href="#">
                        <div class="mask waves-effect waves-light"></div>
                    </a>
                </div>
            </div>
            <div class="addToCart text-right">
                <p class="button ">
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-produtoID="@Model.ProdutoID">
                        Incluir no Carrinho
                    </a>
                </p>
            </div>
            </div>
        </div>
